<RegisterScreen>:
    name: 'register'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: "Register"
            font_size: '24sp'

        TextInput:
            id: name_input
            hint_text: "Full Name"

        TextInput:
            id: mobile_input
            hint_text: "Mobile Number"
            input_filter: 'int'

        TextInput:
            id: password_hint_input
            hint_text: "Password Hint"

        TextInput:
            id: password_input
            hint_text: "Password"
            password: True

        Button:
            text: "Register"
            on_release: root.register_user()

        Button:
            text: "Back to Login"
            on_release: root.manager.current = 'login'