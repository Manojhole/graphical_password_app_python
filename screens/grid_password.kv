<GridPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ScrollView:
            GridLayout:
                id: image_grid
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 150
                row_force_default: True
                spacing: 10
                padding: 10

        TextInput:
            id: hint_input
            hint_text: "Enter a hint to remember your image password"
            size_hint_y: None
            height: 40

        Button:
            text: "Confirm Password"
            size_hint_y: None
            height: 50
            on_release: root.confirm_password()
